[python]
files = app/**/*.py
ignore = **/__pycache__/*.py

bears = SpaceConsistencyBear, QuotesBear
use_spaces = True
max_line_length = 80
language = Python
preferred_quotation = 
default_actions = **: ApplyPatchAction

[autopep8]
bears = PEP8Bear, PycodestyleBear
pycodestyle_ignore = E303, E121, E123, E126, E133, E226, E242, E704,
                     W503, W504, W605

default_actions = PEP8Bear: ApplyPatchAction
